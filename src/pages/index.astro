---
import Layout from "../layouts/Layout.astro";
import Avatar from "../components/Avatar.astro";
import NavBar from "../components/NavBar.astro";
---

<Layout title="Welcome to my website">
  <NavBar />
  <main>
    <section>
      <Avatar altTxt="astronaut cat" imgSrc="/assets/astro_cat.webp" />
      <h1>
        Hi, I'm <span class="text-gradient">Bahram</span>{" "}<span
          class="rotate">ðŸ‘‹</span
        >
      </h1>
    </section>
    <p class="intro">
      I'm a developer based in Fort Lauderdale, FL.<p class="recruiter">
        Are you a recruiter? ðŸ‘‰ <a href="https://bjbagher.io/recruiter"
          >Schedule a call</a>
      </p>
    </p>
  </main>
