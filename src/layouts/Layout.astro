---
export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content="BB personal website">

    <title>{title}</title>
  </head>
  <body>
    <slot />
  </body>
</html>
<style is:global>

  :root {
    --accent: 124, 58, 237;
    --accent-gradient: linear-gradient(
      45deg,
      rgb(var(--accent)),
      #da62c4 30%,
      white 60%
    );
  }

  @font-face {
  font-family: 'SF PRO';
  font-style: normal;
  font-weight: 400;
  src: system-ui, url("https://fonts.cdnfonts.com/css/sf-pro-display") format('woff');
  font-display: swap;
}

  html {
    font-family: "SF PRO", system-ui, sans-serif;
    background-color: whitesmoke;
    padding: 0;
    margin: 0;
    min-width: 375px;
  }
  code {
    font-family: Menlo, Monaco, Lucida Console, Liberation Mono,
      DejaVu Sans Mono, Bitstream Vera Sans Mono, Courier New, monospace;
  }
</style>
