---
import Layout from "./Layout.astro";
import NavBar from "../components/NavBar.astro";

export interface Props {
  content: {
    title: string;
    pubDate?: string;
    updatedDate?: string;
    heroImage?: string;
  };
}

const {
  content: { title, pubDate, updatedDate, heroImage },
} = Astro.props;
---

<Layout title={title}>
  <NavBar />
  <main>
    <article>
      {heroImage && <img width={420} height={260} src={heroImage} alt="" />}
      <div class="slot">
        <h1 class="title">{title}</h1>
        {pubDate && <time>{pubDate}</time>}
        {
          updatedDate && (
            <div>
              Last updated on <time>{updatedDate}</time>
            </div>
          )
        }
        <hr />
        <slot />
      </div>
    </article>
  </main>
</Layout>

<style>
  img {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    margin: auto;
    width: 50%;
    height: 50%;
  }

  .slot {
    padding: 10px;
    min-width: 30ch;
    max-width: 60ch;
    margin: 0 auto;
  }
</style>
